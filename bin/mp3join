TEMPFILE=mp3join.list
OUTPUT="./output.mp3"
rm -f $TEMPFILE

python -c "import os; open('${TEMPFILE}', 'w').writelines(['file \'%s\'\n' % file for file in os.listdir('.') if file.endswith('.mp3')])"

if [ -f $OUTPUT ]
then
    echo "file exist, quit"
    exit 1
fi

ffmpeg -f concat -i "$TEMPFILE" -c copy $OUTPUT

rm $TEMPFILE
